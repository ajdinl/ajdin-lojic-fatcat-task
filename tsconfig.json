{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "baseUrl": "./",
        "paths": {
            "@homework-task/*": ["src/*"]
        },
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "moduleResolution": "node"
    },
    "include": ["src", "vite-env.d.ts", "vite.config.ts", "tailwind.config.ts"],
    "exclude": ["node_modules"]
}
